; Assumes micro and diff-so-fancy are installed (brew is easy way)
; https://github.com/zyedidia/micro
; https://github.com/so-fancy/diff-so-fancy
; Place in ~/.gitconfig
[credential]
	helper = osxkeychain
[user]
	name = Paulo S. Costa
	email = pauloscosta5@gmail.com
[http]
	sslVerify = false
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = 11
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = micro
	pager = delta --plus-color="#012800" --minus-color="#340001" --theme='OneHalfDark'
[interactive]
    diffFilter = delta --color-only
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
