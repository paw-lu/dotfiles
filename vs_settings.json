{
  "workbench.colorTheme": "Material Theme",
  "workbench.iconTheme": "eq-material-theme-icons",
  "editor.fontFamily": "Fira Code",
  "editor.lineHeight": 24,
  "editor.fontLigatures": true,
  "explorer.decorations.badges": false,
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "black",
  "git.autofetch": true,
  "autoDocstring.docstringFormat": "numpy",
  "autoDocstring.startOnNewLine": true,
  "python.testing.pytestEnabled": true,
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools",
    "editor.tabSize": 2
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": false
  },
  "python.dataScience.sendSelectionToInteractiveWindow": true,
  "editor.rulers": [79, 72],
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
  "[restructuredtext]": {
    "editor.tabSize": 3
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "terminal.integrated.shell.osx": "/bin/zsh",
  "mssql.connections": [
    {
      "server": "ZC1Q2PSQLGE1V.corp.companyname.com",
      "database": "quantdb",
      "authenticationType": "Integrated",
      "profileName": "QuantDB",
      "password": ""
    },
    {
      "server": "ZC1Q2PSQLGE1V.corp.companyname.com",
      "database": "",
      "authenticationType": "Integrated",
      "profileName": "2016",
      "password": ""
    },
    {
      "server": "Zdbedcisandbox.corp.companyname.com",
      "database": "",
      "authenticationType": "Integrated",
      "profileName": "Sandbox",
      "password": ""
    }
  ],
  // If issues with conda environments, turn off
  "terminal.integrated.inheritEnv": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  // For connecting to enterprise GitHub
  // https://github.com/microsoft/vscode-pull-request-github/issues/1251#issuecomment-519725879
  // This section seems to disappear after successful sign on
  "githubPullRequests.hosts": [
    {
      "host": "https://github.companyname.com/",
      "token": "my-token-here"
    }
  ],
  "prettier.printWidth": 88,
  "prettier.proseWrap": "always",
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.linting.mypyEnabled": true,
  "python.venvPath": "~/Library/Caches/pypoetry/virtualenvs",
  // Avoid debugger conflict with coverage
  // https://code.visualstudio.com/docs/python/testing
  "python.testing.pytestArgs": [
    "--no-cov"
  ]
}
