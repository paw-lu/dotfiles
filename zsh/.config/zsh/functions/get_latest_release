# Get the latest tag name of a release
# Requires jq to be installed
# Args:
#     USERNAME: GitHub username
#     REPO: Repository name
if [ -z "$1" ]; then
    echo "Usage: get_latest_release [USERNAME] [REPO]"
    return 0
elif [ "$#" -gt "2" ]; then
    echo "‚ùì Too many parameters"
    echo "Expected 2 parameters: USERNAME and REPO"
    echo
    echo "Usage: get_latest_release [USERNAME] [REPO]"
    return 1
else
    local USERNAME="$1"
    local REPO="$2"
    curl --silent "https://api.github.com/repos/${USERNAME}/${REPO}/releases/latest" | jq ".tag_name"
fi
