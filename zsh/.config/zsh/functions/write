# Run one or more bash commands, pipe to file, and open it
# Args:
#   COMMAND: The command whose output will be piped to the file
if [ -z "$1" ]; then
    echo "‚ùì Illegal number of parameters"
    echo "Expected 1 parameter -- the command whose output will be written"
    echo
    echo "Usage: write [COMMAND]"
    return 0
else
    "$@" | tee /temp/write.text
    code /tmp/write.txt
fi
