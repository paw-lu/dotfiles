# Preview a notebook on the command line
# Requres glow and nbconvert to be installed
# Args
#   FILE: the ipynb noteboook file
if [[ "$#" -eq "0" ]]; then
    echo "Usage: prev_notebook [FILE]"
elif [[ "$#" -gt "2" ]]; then
    echo "‚ùì Too many parameters"
    echo "Expected 1 parameter -- the notebook file"
    echo
    echo "Usage: prev_notebook [FILE]"
else
    glow --pager <(jupyter-nbconvert --stdout --to markdown 14_Deep_Computer_Vision_Using_Convolutional_Neural_Networks.ipynb 2>/dev/null)
fi
