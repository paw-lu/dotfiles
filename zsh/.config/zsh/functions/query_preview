# Preview live results of a query
# Uses fzf
if [[ "$#" -eq "0" ]]; then
    echo "Usage: query_preview [QUERY]"
    echo
    echo "Parameters"
    echo "QUERY: A string where {q} is the query and {} is the file."
    echo "       You may specify either."
    echo
    echo "Examples"
    echo "query_preview 'jq {q} {}'"
else
    fzf --phony --print-query --preview "$@"
fi
